{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}